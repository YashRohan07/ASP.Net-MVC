@model Auth.DTO.LoginDTO

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@* Display error message if any *@
@if (TempData["Msg"] != null)
{
    <div class="alert alert-danger">
        @TempData["Msg"]
    </div>
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{

    <!-- UserName Field -->
    <div class="form-group">
        <label for="UserName">UserName</label>
        @Html.TextBoxFor(data => data.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(data => data.UserName, "", new { @class = "text-danger" })
    </div>

    <!-- Password Field -->
    <div class="form-group">
        <label for="Password">Password</label>
        @Html.PasswordFor(data => data.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(data => data.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
}

<div>
    <a href="@Url.Action("Create", "User")"> Register here.</a>
</div>

